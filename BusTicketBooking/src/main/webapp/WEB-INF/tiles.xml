    <definition name="adminEmployeeUser" extends="adminBaseLayout">
        <put-attribute name="adminTitle" value="ManageEmployee" />
        <put-attribute name="adminContent"
                       value="/WEB-INF/jsp/admin/adminEmployeeUser.jsp" />
    </definition>
    <definition name="adminBusTrip" extends="adminBaseLayout">
        <put-attribute name="adminTitle" value="ManageBusTrip" />
        <put-attribute name="adminContent"
                       value="/WEB-INF/jsp/admin/adminBusTrip.jsp" />
    </definition>
    <definition name="adminBus" extends="adminBaseLayout">
        <put-attribute name="adminTitle" value="ManageBus" />
        <put-attribute name="adminContent"
                       value="/WEB-INF/jsp/admin/adminBus.jsp" />
